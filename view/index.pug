doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title News
    style.
      html {
        box-sizing: border-box;
        color: black;
        background-repeat: no-repeat;
        background-color: white;
      }
      body {
        max-width: 50em;
        margin: auto;
        padding: 2em;
        font-size: 20px;
        font-family: 'Times New Roman', Times, serif;
        line-height: 1.5;
      }
      a {
        color: #7cc68d;
      }
      .button {
        display: inline-block;
        font-weight: 700;
        color: black;
        background-color: #4daaf2;
        border: 2px solid #4daaf2;
        border-radius: 100px;
        padding: 10px 30px;
        text-decoration: none;
        margin: 1em 0;
      }
      .box {
        display: block;
        margin: auto;
        border-radius: 5px;
        padding: 1em 2em;
        color: black;
        font-size: larger;
      }
      .box a {
        color: blue;
      }
      .small {
        font-size: smaller;
        opacity: .8;
      }
      figure {
        margin: 0;
      }
      aside figcaption,
      aside h3 {
        margin: .5em 1em;
      }
      aside {
        width: 19em;
        background: lightgrey;
        border-radius: 5px;
        color: black;
      }
      img {
        width: 70%;
        height: auto;
      }
      .container {
        display: flex;
        gap: 2em;
        flex-flow: column;
        margin: 0 auto;
        justify-content: center;
      }
      .row {
        display: flex;
        gap: 2em;
        flex-flow: row wrap;
        justify-content: space-between;
      }
      .grid-container {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
      }
      .adContainer {
        display: flex;
        background-color: lightcoral;
        align-items: center;
        justify-content: space-between;
        height: 100px;
        width: 900;
        border-radius: 10px; /* Add rounded corners */
        padding: 10px;
      }
      .articleContainer {
        display: flex;
        align-items: center;
        justify-content: space-between;
        height: 200px;
        width: 900;
      }
      .divider {
        width: 100%;
        border-top: 1px solid #ccc;
        /* Set border color and style */
      }
      .left-item {
        flex: 1;
      }
      .right-item {
        flex: 2;
        padding-left: 20px;
        /* Adjust spacing between items */
      }
      h1 {
            text-align: center;
        }
