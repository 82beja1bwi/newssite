doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title News
    style.
      html {
        box-sizing: border-box;
        color: black;
        background-repeat: no-repeat;
        background-color: white;
      }
      body {
        max-width: 50em;
        margin: auto;
        padding: 2em;
        font-size: 20px;
        font-family: 'Times New Roman', Times, serif;
        line-height: 1.5;
      }
      a {
        color: #7cc68d;
      }
      .button {
        display: inline-block;
        font-weight: 700;
        color: black;
        background-color: #4daaf2;
        border: 2px solid #4daaf2;
        border-radius: 100px;
        padding: 10px 30px;
        text-decoration: none;
        margin: 1em 0;
      }
      .box {
        display: block;
        margin: auto;
        border-radius: 5px;
        padding: 1em 2em;
        color: black;
        font-size: larger;
      }
      .box a {
        color: blue;
      }
      .small {
        font-size: smaller;
        opacity: .8;
      }
      figure {
        margin: 0;
      }
      aside figcaption,
      aside h3 {
        margin: .5em 1em;
      }
      aside {
        width: 19em;
        background: lightgrey;
        border-radius: 5px;
        color: black;
      }
      img {
        width: 70%;
        height: auto;
      }
     
      .row {
        display: flex;
        gap: 2em;
        flex-flow: row wrap;
        justify-content: space-between;
      }
      
      .adContainer {
        display: flex;
        background-color: lightcoral;
        align-items: center;
        justify-content: space-between;
        height: 100px;
        width: 100%;
        border-radius: 5px; /* Add rounded corners */
        padding: 10px;
      }
     
      .divider {
        width: 100%;
        border-top: 1px solid #ccc;
        /* Set border color and style */
      }
      

      .payment-option {
        margin-bottom: 20px;
      }

      .flexcontainer {
        max-width: 500px;
        margin: 20px auto;
        padding: 20px;
        display: flex; /* Display flex for layout */
        justify-content: space-between; /* Space between the two sections */
        background-color:orange;
        border-radius: 5px
      }
      .contractContainer {
        max-width: 200px;
        margin: 10px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 15px;
        box-shadow: 0 2px 4px;
      }
      h1 {
            text-align: center;
        }
      ul {
        list-style-type: none;
        padding-left: 30;
      }
      li::before {
        content: "\2022"; /* Bullet point */
        color: orange; /* Bullet point color */
        display: inline-block;
        width: 1em;
        margin-left: -1em;
      }
      button {
        padding: 10px 20px;
        font-size: 16px;
        font-weight: bold;
        background-color: orange;
        color: black; /* Text color changed to black */
        border: none;
        border-radius: 30px;
        cursor: pointer;
        width: 100%;
      }
      h3 {
            text-align: center;
        }
      .details-container {
        width: 100%;
        display: flex;
        margin:5px;
        background-color: rgba(234, 174, 90, 1);
        padding: 5px;
        border-radius: 5px
      }
      .big-container {
        flex: 1;
        border-radius: 0px;
        padding-top: 5px;
        padding-bottom: 5px;
        padding-right: 10px;
        padding-left: 10px;
        margin-right: 0px;
        background-color: white

      }
      .small-container {;
        border-radius: 0px;
        padding-top: 5px;
        padding-bottom: 5px;
        padding-right: 20px;
        padding-left: 20px;
        margin-right: 0px;
        margin-left: 0px;
        background-color: white
      }


  body
    if showPayments
      .flexcontainer
        .contractContainer
          h3 Your Selection
          button(type='button') Subscribe
          div.payment-option
            ul
              li 2 Euros per month
              li Access 100% of our content
              li Consent to processing your personal data for 'personalizedAds'
        .contractContainer
          h3 Ad Free Reading
          button(type='button') Subscribe
          div.payment-option
            ul
              li 3 Euros per month
              li Access 100% of our content
              li Ad-free reading
    else
      .adContainer(style=`background-color: ${genericAd ? 'rgba(234, 174, 90, 1)' : 'rgba(231, 105, 72, 0.9)'}`)
        if genericAd
          .div 
            p Some Generic Ad
            p You have not consented to personalized advertising. We can still show you ads. 
        else
          .div
            p Some Personalized Ad
            p You have consented to personalized advertising.
      object(data="pics/site.svg", type="image/svg+xml", width="100%", height="100%")

    
    //- Pug code for the containers
    div.details-container
      div.big-container
        h4 Consent
        p accepted: #{acceptedString}
        p rejected: #{rejectedString}
      div.small-container
        h4 Content
        p #{contentPercentage}%
      div.small-container
        h4 Cost
        p #{cost} EUR
      div.small-container
        h4 Score
        p #{score}


